{
    "path": "/blocks/:height",
    "name": "block-detail",
    "meta": {
        "group": "detail-page",
        "keepAliveGoTo": []
    },
    "props": {
        "layout": "flex",
        "storeNamespaces": ["block"],
        "initActions": ["block/fetchBlockInfo"],
        "schema": [
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "blockDetailTitle",
                "managerGetter": "block/info",
                "errorMessage": "blockDetailError",
                "pagination": "custom",
                "paginationOptions": {
                    "nextPageAction": "block/nextBlock",
                    "previousPageAction": "block/previousBlock",
                    "canFetchPrevious": true,
                    "canFetchNext": true
                },
                "fields": [
                    "confirmations",
                    "height",
                    "payloadSize",
                    "date",
                    "totalFee",
                    "difficulty",
                    "feeMultiplier",
                    "transactions",
                    "harvester",
                    "beneficiaryAddress",
                    "blockHash",
                    "proofGamma",
                    "proofScalar",
                    "proofVerificationHash"
                ]
            },
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "blockTransactionsTitle",
                "managerGetter": "block/blockTransactions",
				"pagination": "server",
                "onRowClickKey": "transactionHash",
                "hasFilter": true,
                "fields": [
                    "deadline",
                    "transactionHash",
                    "transactionType"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "merkleInfoTitle",
                "managerGetter": "block/info",
                "dataGetter": "block/merkleInfo",
                "pagination": "none"
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "balanceChangeReceiptTitle",
                "managerGetter": "block/balanceChangeReceipt",
                "pagination": "server",
                "hideEmptyData": true,
                "fields": [
                    "version",
  					"receiptType",
                    "targetAddress",
                    "mosaics"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "balanceTransferReceiptTitle",
                "managerGetter": "block/balanceTransferReceipt",
                "pagination": "server",
                "hideEmptyData": true,
                "fields": [
                    "version",
  					"receiptType",
  					"senderAddress",
  					"recipient",
                    "mosaics"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "inflationReceiptTitle",
                "managerGetter": "block/inflationReceipt",
                "pagination": "server",
                "hideEmptyData": true,
                "fields": [
                    "version",
  					"receiptType",
  					"mosaics"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "artifactExpiryReceiptTitle",
                "managerGetter": "block/artifactExpiryReceipt",
                "pagination": "server",
                "hideEmptyData": true,
                "fields": [
                    "version",
                    "receiptType",
                    "artifactId"
                ]
            },
            {
                "layoutOptions": "adaptive",
                "type": "CardTable",
                "title": "resolutionStatementTitle",
                "managerGetter": "block/blockReceipts",
                "dataGetter": "block/resolutionStatement",
                "pagination": "client",
                "pageSize": 5,
                "hideEmptyData": true,
                "fields": [
                    "resolutionType",
                    "unresolved",
                    "addressResolutionEntries",
                    "mosaicResolutionEntries"
                ]
            }
        ]
    }
}