{
    "path": "/nodes",
    "name": "nodes",
    "meta": {
        "group": "list-page",
        "keepAliveGoTo": ["detail-page"]
    },
    "props": {
        "layout": "flex",
        "storeNamespaces": ["node"],
        "schema": [
            {
                "layoutOptions": "full-width",
                "type": "NodesMapWidget",
                "title": "nodesTitle",
                "height": 500,
                "maxWidth": 1500,
                "zoom": 2,
                "managerGetter": "node/timeline",
                "errorMessage": "Failed to fetch node list"
            },
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "nodesTitle",
                "managerGetter": "node/timeline",
                "errorMessage": "Failed to fetch node list",
                "pagination": "client",
                "pageSize": 15,
                "fields": [
                    "version",
                    "roles",
                    "network",
                    "host",
                    "port",
                    "address",
                    "friendlyName"
                ],
                "mobileFields": [
                    "roles",
                    "address",
                    "friendlyName",
                    "host"
                ]
            }
        ]
    }
}